<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SudokuSolverApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SudokuSolverApp"
    xmlns:views="clr-namespace:SudokuSolverApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Manual"  
            Icon="icon_notes.png"
            ContentTemplate="{DataTemplate views:ManualInPage}"
            Route="ManualInPage"/>

        <ShellContent
            Title="Camera"  
            Icon="icon_about.png"
            ContentTemplate="{DataTemplate views:CameraPage}"
            Route="CameraPage"/>
    </TabBar>

</Shell>
